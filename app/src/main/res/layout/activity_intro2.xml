<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color3"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Intro2">

    <ImageView
        android:id="@+id/imageView_biografi"
        android:layout_width="260dp"
        android:layout_height="215dp"
        android:layout_marginTop="130dp"
        app:srcCompat="@drawable/intro2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="BIOGRAFI"
        android:textColor="@color/color1"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_biografi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="Mempelajari Kisah-Kisah Pahlawan di\nIndonesia Secara Mendalam"
        android:textColor="@color/color2"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4_1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="165dp"
            app:srcCompat="@drawable/bulat_abu" />

        <ImageView
            android:id="@+id/imageView4_2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/bulat_warna" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/bulat_abu" />

        <Button
            android:id="@+id/button_intro2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button2"
            android:layout_marginLeft="70dp"
            android:text="Lanjut"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/color3" />
    </LinearLayout>

</LinearLayout>