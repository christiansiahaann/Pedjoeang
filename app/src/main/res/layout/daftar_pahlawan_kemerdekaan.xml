<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color3"
    tools:context="com.prakpapb2.intro1.DaftarPahlawanKemerdekaan">

    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginStart="28dp"
        android:layout_marginTop="60dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <com.veeyaar.supergradienttextview.GradientTextView
        android:id="@+id/textJenisPahlawan"
        android:layout_width="275dp"
        android:layout_height="31dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="30dp"
        android:width="16dp"
        android:height="26dp"
        android:autoSizeMaxTextSize="22sp"
        android:fontFamily="@font/poppins"
        android:text="Kemerdekaan Nasional"
        android:textAllCaps="false"
        android:textSize="22dp"
        android:textStyle="bold"
        app:endColor="@color/color5"
        app:isVertical="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startColor="@color/color4"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/gambarpahlawan1"
        android:layout_width="150dp"
        android:layout_height="145dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="76dp"
        android:src="@drawable/gambar_sisingamangaraja_xii"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textJenisPahlawan"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="9dp"
        android:text="Sisingamangaraja XII"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gambarpahlawan1"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/gambarpahlawan2"
        android:layout_width="149dp"
        android:layout_height="146dp"
        android:layout_marginTop="76dp"
        android:src="@drawable/gambar_pakubuwono_vi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintStart_toEndOf="@+id/gambarpahlawan1"
        app:layout_constraintTop_toBottomOf="@+id/textJenisPahlawan"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="9dp"
        android:text="Pakubuwono VI"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@+id/textView1"
        app:layout_constraintTop_toBottomOf="@+id/gambarpahlawan2"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/gambarpahlawan3"
        android:layout_width="150dp"
        android:layout_height="145dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/gambar_jenderal_soedirman"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="9dp"
        android:text="Jenderal Soedirman"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gambarpahlawan3"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/gambarpahlawan4"
        android:layout_width="149dp"
        android:layout_height="146dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/gambar_sutan_sjahrir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintStart_toEndOf="@+id/gambarpahlawan3"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="9dp"
        android:text="Sutan Sjahrir"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/gambarpahlawan4"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>

